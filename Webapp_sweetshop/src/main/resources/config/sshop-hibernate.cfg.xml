<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.url">jdbc:sqlserver://localhost:1433;databaseName=shopcake;trustServerCertificate=true</property>
        <property name="connection.username">sa</property>
        <property name="connection.password">12345</property>

        <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="com.x70s.sweetshop.entity.AppUser"/>
        <mapping class="com.x70s.sweetshop.entity.Authority"/>
        <mapping class="com.x70s.sweetshop.entity.Product"/>
    </session-factory>
</hibernate-configuration>